{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "engines": {
    "node": ">=8",
    "yarn": ">=1.3.2"
  },
  "scripts": {
    "add-contributors": "all-contributors add",
    "build": "node ./scripts/build",
    "prewatch": "yarn build",
    "watch": "node ./scripts/watch",
    "lint": "eslint . --fix",
    "flow": "flow",
    "publish": "./scripts/publish.sh",
    "fmt": "prettier --write \"**/*.{md,js,json}\"",
    "postinstall": "yarn build && yarn flow stop && yarn flow",
    "test": "jest --watch --coverage",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --ci --runInBand",
    "test:ci": "yarn lint && yarn flow && yarn test:cov && yarn add:coveralls",
    "add:coveralls": "cat ./coverage/lcov.info | coveralls",
    "check": "yarn flow && yarn lint",
    "validate": "yarn flow && yarn lint && yarn test:cov"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-flow": "^7.0.0",
    "all-contributors-cli": "^6.2.0",
    "babel-jest": "^24.7.1",
    "babel-log": "^2.0.0",
    "babel-plugin-tester": "^6.0.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-precure": "^4.13.1",
    "flow-bin": "0.97.0",
    "globby": "^9.2.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "jest-in-case": "^1.0.2",
    "lerna": "^3.13.2",
    "lint-staged": "^8.1.5",
    "mkdirp": "^0.5.1",
    "path-exists": "^4.0.0",
    "prettier": "^1.16.4",
    "pretty-format": "^24.7.0",
    "rimraf": "^2.6.3",
    "strip-ansi": "^5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
