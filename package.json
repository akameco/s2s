{
  "private": true,
  "workspaces": ["packages/*"],
  "engines": {
    "node": ">=8",
    "yarn": ">=1.3.2"
  },
  "scripts": {
    "add-contributors": "all-contributors add",
    "build": "node ./scripts/build",
    "lint": "eslint . --fix",
    "flow": "flow",
    "precommit": "lint-staged",
    "publish": "./scripts/publish.sh",
    "fmt": "prettier --write '**/*.{js,json}'",
    "postinstall": "yarn build",
    "test": "jest --watch --coverage",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --ci --runInBand",
    "test:ci": "yarn lint && yarn flow && yarn test:cov && yarn add:coveralls",
    "add:coveralls": "cat ./coverage/lcov.info | coveralls",
    "check": "yarn flow && yarn lint",
    "validate": "yarn flow && yarn lint && yarn test:cov"
  },
  "lint-staged": {
    "*.js": ["fmt", "check", "git add"],
    "*.json": ["fmt", "git add"]
  },
  "devDependencies": {
    "all-contributors-cli": "^4.8.1",
    "babel-cli": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-log": "^2.0.0",
    "babel-plugin-tester": "^4.0.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-2": "^6.24.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.11.0",
    "eslint-config-precure": "^0.11.2",
    "flow-bin": "^0.59.0",
    "globby": "^6.1.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "jest-in-case": "^1.0.2",
    "lerna": "^2.4.0",
    "lint-staged": "^5.0.0",
    "mkdirp": "^0.5.1",
    "path-exists": "^3.0.0",
    "pretty-format": "^21.2.1",
    "rimraf": "^2.6.2",
    "strip-ansi": "^4.0.0"
  }
}
