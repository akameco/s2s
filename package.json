{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "engines": {
    "node": ">=8",
    "yarn": ">=1.3.2"
  },
  "scripts": {
    "add-contributors": "all-contributors add",
    "build": "node ./scripts/build",
    "lint": "eslint . --fix",
    "flow": "flow",
    "precommit": "lint-staged",
    "publish": "./scripts/publish.sh",
    "fmt": "prettier --write \"**/*.{md,js,json}\"",
    "postinstall": "yarn build",
    "test": "jest --watch --coverage",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --ci --runInBand",
    "test:ci": "yarn lint && yarn flow && yarn test:cov && yarn add:coveralls",
    "add:coveralls": "cat ./coverage/lcov.info | coveralls",
    "check": "yarn flow && yarn lint",
    "validate": "yarn flow && yarn lint && yarn test:cov"
  },
  "lint-staged": {
    "*.js": [
      "fmt",
      "check",
      "git add"
    ],
    "*.{json,md}": [
      "fmt",
      "git add"
    ]
  },
  "devDependencies": {
    "all-contributors-cli": "^4.10.1",
    "babel-cli": "^6.26.0",
    "babel-jest": "^22.1.0",
    "babel-log": "^2.0.0",
    "babel-plugin-tester": "^5.0.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-2": "^6.24.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.16.0",
    "eslint-config-precure": "^2.0.0",
    "flow-bin": "^0.63.1",
    "globby": "^7.1.1",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "jest-in-case": "^1.0.2",
    "lerna": "^2.8.0",
    "lint-staged": "^6.0.1",
    "mkdirp": "^0.5.1",
    "path-exists": "^3.0.0",
    "pretty-format": "^22.1.0",
    "rimraf": "^2.6.2",
    "strip-ansi": "^4.0.0"
  }
}
